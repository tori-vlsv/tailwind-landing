{
  "compilerOptions": {
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "module": "esnext",
    "lib": [
      "ES2019"
    ],
    "noEmit": true,
    "moduleResolution": "node",
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.mts"
  ],
  "exclude": [
    "node_modules/**/*",
    "dist/**/*"
  ]
}